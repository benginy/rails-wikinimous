<div class="d-flex justify-content-between align-items-center bg-light p-3 mb-4">
  <h1 class="mb-0">Wikinomous</h1>
  <%= link_to "New article", new_article_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <ul class="list-group text-center">
        <% @articles.each do |article| %>
          <li class="list-group-item p-1 mb-1">
            <%= link_to article.title, article_path(article), class: "text-decoration-none" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
