<div class="d-flex justify-content-between align-items-center bg-light p-3 mb-4">
  <h1 class="mb-0">Wikinomous</h1>
  <%= link_to "New article", new_article_path, class: "btn btn-primary" %>
</div>

<h1 class="text-center"><%= @article.title %></h1>
<h3 class="text-center text-navy">Content:</h3>

<p class="text-center p-3 mb-4"><%= @article.content %></p>

<div class="text-center">
<%= link_to "Back to articles", articles_path, class: 'btn btn-secondary' %> |
<%= link_to "Edit this article", edit_article_path(@article), class: 'btn btn-warning' %> |
<%= link_to "Remove this article", article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
</div>
